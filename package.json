{
  "name": "pcl-monorepo",
  "version": "1.1.0",
  "private": true,
  "packageManager": "npm@10.0.0",
  "description": "Professional Club League - Sports Management Platform with Android Mobile App",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "cd apps/web && npm run build && cd ../.. && ln -nfs apps/web/.next .next",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "type-check": "turbo run type-check"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^4.0.0",
    "turbo": "^2.7.2",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "lucide-react": "^0.562.0",
    "next": "^16.1.1",
    "recharts": "^3.6.0"
  }
}
