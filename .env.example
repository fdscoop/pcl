# Supabase Environment Variables

# These are public and safe to expose
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here

# These are secret - never expose on client
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Local development (if using local Supabase)
SUPABASE_DB_PASSWORD=your_local_password

# Vercel deployment
VERCEL_ENV=production
NEXT_PUBLIC_APP_URL=https://pcl.vercel.app

# Cashfree Verification API (for Aadhaar KYC)
NEXT_PUBLIC_CASHFREE_KEY_ID=your_cashfree_client_id
CASHFREE_SECRET_KEY=your_cashfree_secret_key
CASHFREE_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----
your_cashfree_public_key_pem_content_here
-----END PUBLIC KEY-----"
